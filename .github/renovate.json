{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "hostRules": [
    {
      "matchHost": "https://repo1.maven.org/maven2/",
      "enabled": true
    },
    {
      "matchHost": "docker.io",
      "enabled": false
    },
    {
      "matchHost": "api.github.com",
      "enabled": false
    },
    {
      "matchHost": "github.com",
      "enabled": false
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "registryUrls": [
        "https://repo1.maven.org/maven2/"
      ]
    }
  ]
}